<link rel="stylesheet" href="/css/recipe.css">

<span class="recipeName" hidden>{{recipe.recipeName}}</span>

<script>
    var recipeName = document.querySelector(".recipeName").textContent;
    document.querySelector("title").appendChild(document.createTextNode(`${recipeName}`));
</script>

<div id="recipeContent">
    <div id="leftSize">
        <div>
            <h1 id="recipeName">{{recipe.recipeName}}</h1>
            <h3 id="createdBy">By {{recipe.createdBy.firstName}} {{recipe.createdBy.lastName}}</h3>
            <h4 id="dateCreated">{{recipe.parsedDateCreated}}</h4>
        </div>
        <div id="portraitImgOrientation">
            <img class="recipeImage" src="/images/recipeImages/{{recipe.image.imageFile}}" alt="{{recipe.image.imageAlt}}">
        </div>
        <div id="ingredientsBox">
            <h1 id="ingredientTitle">Ingredients</h1>
            <div id="ingredients">
                {{#each recipe.ingredients}}
                <p>- {{this}}</p>
                {{/each}}
            </div>
        </div>
        <div id="directionsBox">
            <h1 id="directionsTitle">Directions</h1>
            <div id="directions">
                {{#each recipe.directions}}
                <p>{{incIndex @index}}. {{this}}</p>
                {{/each}}
            </div>
        </div>
        {{#if recipe.notes}}
        <div id="notesBox">
            <h1 id="notesTitle">Notes</h1>
            <div id="notes">
                <p>{{recipe.notes}}</p>
            </div>
        </div>
        {{/if}}
    </div>
    <div id="rightSide">
        <div id="landscapeImgOrientation">
            <img class="recipeImage" src="/images/recipeImages/{{recipe.image.imageFile}}" alt="">
        </div>
    </div>
</div>