<link rel="stylesheet" href="/css/appetizers.css">
<link rel="stylesheet" href="/css/categoryCards.css">

<script>
    document.querySelector("meta[name='theme-color']").setAttribute("content", "#E6F3C2");
    document.querySelector("title").appendChild(document.createTextNode("Appetizers"));
</script>

<div>
    <div id="headerColorFill"></div>
    <div id="headerBackdrop">
        <div>
            <svg viewBox="0 0 1440 561" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
            <path d="M0 416V0H1441L1440 416C876.437 608.289 560.325 608.302 0 416Z" fill="#E6F3C2"/>
            </svg>

            <div id="headingContent">
                <h1 id="headerTitle">Appetizers</h1>
                <img src="/images/categoryContent/appetizers/headerPlate.png" alt="Plate with caesar salad, croutons, cheese and a fork and knife.">
            </div>
        </div>
    </div>

        {{#if error}}
        <div id="errorBox">
            <h1>{{error}}</h1>
        </div>
        {{else}}

    <div id="cardSpace">
        {{#each recipe}}
        <div class="recipeCard">
            <a href="/">
                <div class="cardContent">
                    <div class="cardSection">
                        <img src="/images/recipeImages/{{image.imageFile}}" alt="">
                    </div>
                    <div class="cardSection">
                        <div class="cardTextSection">
                            <div class="cardHeading">
                                <h1>{{recipeName}}</h1>
                            </div>
                            <div class="cardBody">
                                <p>{{ingredientCount}} Ingredients</p>
                                {{#if directionCount.length}}
                                <p>hi</p>
                                {{/if}}
                                <p>{{directionCount}} Steps</p>
                            </div>
                            <div class="cardFooter">
                                <p>{{createdBy.firstName}} {{createdBy.lastName}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>